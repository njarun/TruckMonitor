<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />
        <import type="com.dxb.truckmonitor.utils.Utility" />

        <variable
            name="truckModel"
            type="com.dxb.truckmonitor.domain.router.dto.model.TruckModel" />

        <variable
            name="index"
            type="Integer" />

        <variable
            name="listener"
            type="com.dxb.truckmonitor.presentation.dashboard.pages.list.ListListener" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="20dp"
        android:onClick="@{() -> listener.onListItemSelected(index, truckModel)}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageView
                        style="@style/ShapeCircle"
                        android:id="@+id/preview_image_tv"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@mipmap/ic_launcher_round"
                        android:scaleType="centerCrop"
                        app:placeholder="@{com.dxb.truckmonitor.R.mipmap.ic_launcher_round}"
                        android:contentDescription="@string/truck_item_image" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:minHeight="70dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="@{truckModel.driverName}"/>

                    <TextView
                        android:id="@+id/post_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textSize="12sp"
                        android:text="@{Utility.getDatePrettied(truckModel.lastUpdated)}"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="5dp"/>
                    
                    <TextView
                        android:id="@+id/post_text"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@{truckModel.location}"/>
                    
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>